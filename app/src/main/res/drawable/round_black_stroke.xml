<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:right="7dp" android:top="2dp">
                <ripple android:color="#615555">
                    <item android:id="@android:id/mask" android:gravity="center">
                        <shape>
                            <corners android:radius="2dp" />
                            <solid android:color="#302D2F" />
                        </shape>
                    </item>
                    <item android:gravity="center">
                        <shape>
                            <corners android:radius="2dp" />
                            <solid android:color="@color/white" />
                        </shape>
                    </item>
                    <item android:bottom="0.7dp" android:gravity="center" android:left="1dp" android:right="0.7dp" android:top="1dp">
                        <shape>
                            <corners android:radius="2dp" />
                            <stroke android:width="1dp" android:color="@android:color/black" />
                        </shape>
                    </item>
                </ripple>
            </item>
            <item android:left="1dp">
                <rotate android:drawable="@drawable/tick_icon" />
            </item>
        </layer-list>
    </item>
    <item>
        <ripple android:color="#615555">
            <item android:id="@android:id/mask" android:gravity="center">
                <shape>
                    <corners android:radius="2dp" />
                    <solid android:color="#302D2F" />
                </shape>
            </item>
            <item android:gravity="center">
                <shape>
                    <corners android:radius="2dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:bottom="1dp" android:gravity="center" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape>
                    <corners android:radius="2dp" />
                    <stroke android:width="1dp" android:color="@android:color/black" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>