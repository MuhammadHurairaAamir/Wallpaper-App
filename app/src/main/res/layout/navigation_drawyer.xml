<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    android:id="@+id/main_drawer"
    android:background="@color/main_background">

    <RelativeLayout
        android:id="@+id/drawer_temp_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/drawer_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:background="@drawable/back_round"
            android:padding="5dp"
            android:src="@drawable/back_icon" />

        <ImageView
            android:id="@+id/drawer_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@id/drawer_back_button"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drawer_image"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="WALREX"
            android:textColor="@color/secondry_app_color"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drawer_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:text="v1.1.0"
            android:textColor="@color/secondry_app_color"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/drawer_first_seperator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#7D898F"
        app:layout_constraintTop_toBottomOf="@id/drawer_temp_1" />

    <TextView
        android:id="@+id/drawer_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/drawer_ripple"
        android:paddingHorizontal="35dp"
        android:paddingVertical="5dp"
        android:text="@string/home"
        android:textColor="#293D4E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawer_temp_1" />

    <TextView
        android:id="@+id/drawer_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_ripple"
        android:paddingHorizontal="35dp"
        android:paddingVertical="5dp"
        android:text="Favorite"
        android:textColor="#293D4E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawer_home" />

    <TextView
        android:id="@+id/drawer_downloads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_ripple"
        android:paddingHorizontal="35dp"
        android:paddingVertical="5dp"
        android:text="Downloads"
        android:textColor="#293D4E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawer_favorite" />

    <TextView
        android:id="@+id/drawer_auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_ripple"
        android:paddingHorizontal="35dp"
        android:paddingVertical="5dp"
        android:text="Auto Wallpaper Changer"
        android:textColor="#293D4E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawer_downloads" />

    <TextView
        android:id="@+id/drawer_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_ripple"
        android:paddingHorizontal="35dp"
        android:paddingVertical="5dp"
        android:text="Settings"
        android:textColor="#293D4E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawer_auto" />

    <View
        android:id="@+id/drawer_second_seprator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="#7D898F"
        app:layout_constraintTop_toBottomOf="@id/drawer_settings" />

    <TextView
        android:id="@+id/second_def"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="More Options"
        android:textColor="@color/secondry_app_color"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawer_second_seprator" />

    <TextView
        android:id="@+id/drawer_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/drawer_ripple"
        android:paddingHorizontal="35dp"
        android:paddingVertical="5dp"
        android:text="Rate this App"
        android:textColor="#293D4E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_def" />

    <TextView
        android:id="@+id/drawer_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_ripple"
        android:paddingHorizontal="35dp"
        android:paddingVertical="5dp"
        android:text="Sharing is Caring"
        android:textColor="#293D4E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawer_rate" />

    <TextView
        android:id="@+id/drawer_reloads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_ripple"
        android:paddingHorizontal="35dp"
        android:paddingVertical="5dp"
        android:text="Reload All Data"
        android:textColor="#293D4E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawer_share" />

    <TextView
        android:id="@+id/drawer_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_ripple"
        android:paddingHorizontal="35dp"
        android:paddingVertical="5dp"
        android:text="Send Feedback!"
        android:textColor="#293D4E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawer_reloads" />

    <TextView
        android:id="@+id/drawer_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_ripple"
        android:paddingHorizontal="35dp"
        android:paddingVertical="5dp"
        android:text="About"
        android:textColor="#293D4E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawer_feedback" />


</androidx.constraintlayout.widget.ConstraintLayout>